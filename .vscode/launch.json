{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "name": "Launch Firefox on localhost",
      "url": "http://localhost:4200",  // your app URL
      "webRoot": "${workspaceFolder}",
      "port": 6100,                    // port for Firefox debugger
      "reloadOnAttach": true
    },
    {
      "name": "ng serve",
      "type": "chrome",
      "request": "launch",
      "cleanUp": "onlyTab",
      "url": "http://localhost:4200/"
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html"
    }
  ]
}
